<h2><em>The only way to travel</em></h2>

<p><% if current_user %>
  Signed in as <br>
  <%= image_tag current_user.avatar.url(:medium) %> <br>
  <%= current_user.username %> <br>
  Joined:
  <%= current_user.created_at.strftime("%m/%d/%Y") %>
  <%= link_to 'Options for all of your posts', user_post_path(current_user, @post) %>
  <% current_user.posts.each do |post| %>
    <p>
      <strong><%= post.city.name %></strong>
      <%= post.text %>

    </p>


    <hr>
  <% end %>
<li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
  <br>
  <%= link_to 'Edit Profile', edit_user_registration_path %>
  <%= link_to 'Show Cities', cities_index_path %>
</li>
<% else %>
<%= link_to 'Login', '/login' %>

<%= link_to 'Signup', '/signup' %>
<% end %></p>
