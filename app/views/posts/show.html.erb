<% current_user.posts.each do |post| %>
  <div class="card">
      <img class="card-img-top" src= "<%= post.city.image %>" alt="Card image cap">
          <div class="card-block">
            <h4 class="card-title"><%= post.city.name %></h4>
            <p class="card-text"><p><%= post.text %></p></p>
            <br>
            <%= link_to 'Edit Post', edit_user_post_path(current_user, post) %>
          <p><%= link_to "Delete this post", user_post_path(current_user, post), data: {confirm: "Are you sure you want to delet this post from #{post.city.name}"}, method: :delete %></p>
          </div>
        </div>
      <hr>
<% end %>
