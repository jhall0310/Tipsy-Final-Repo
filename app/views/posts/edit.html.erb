<div class="form-index-clean">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="intro">
                  <h1>Edit Post</h1>
                  <%= form_for [@user, @post]  do |f| %>

                  <div class="form-group">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title ", required: true, autofocus: true %>
                  </div>

                    <div class="form-group">
                      <%= f.text_area :text, size: "24x6", class: "form-control", placeholder: "Post ", required: true %>
                    </div>

                    <div class="form-group">
                      <%= f.submit "Save Post", class: "btn btn-block btn-success" %>
                    </div>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
