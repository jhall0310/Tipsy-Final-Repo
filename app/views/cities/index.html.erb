<script src="//maps.google.com/maps/api/js?key=AIzaSyBpoS8wBLRRkr2MGeRywG0E5_0tG3xV4cI"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>

<div class="city-clean">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="intro">
                  <h1> Here are the Current Tipsy Cities in the App</h1>
                  <hr>


                  <hr>
                  <div class="card-deck-wrapper">
                      <div class="card-deck">
                        <% @cities.each do |city| %>
                        <div class="card_city">
                          <img class="card-img-top" src="<%= city.image %>" alt="Card image cap">
                          <div class="card-block">
                            <h4 class="card-title"><%= city.name %></h4>
                            <p class="card-text"> <b>Description:</b> <%= city.description %></p>
                            <p class="card-text"><small class="text-muted"><button type="button" class="btn btn-default"><%= link_to "City and posts", city_path(city) %></small></button></p>
                          </div>
                        </div>
                        <% end %>
                      </div>
                    </div>





                </div>
            </div>
        </div>
    </div>
</div>


</script>
