<div class="city-display">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="intro">

                  <h2><strong>City Name: </strong><%= @city.name %> </h2>
                  <hr>
                  <h2><strong>Description: </strong><%= @city.description %> </h2>
                  <hr>
                  <h2><strong>State: </strong><%= @city.address %> </h2>
                  <div class="city_image">
                    <%= image_tag @city.image.url %>
                  </div>

                  <hr />

                  <p><%= link_to "Edit This City", edit_city_path(@city) %></p>
                  <p><%= link_to "show post for this city", city_posts_path(@city) %></p>
                </div>
            </div>
        </div>
    </div>
</div>
